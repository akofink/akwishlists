default: &default
  adapter: postgresql
  encoding: unicode
  pool: 5

development:
  <<: *default
  database: wishlists_development

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  <<: *default
  database: wishlists_test

production:
  <<: *default
  database: wishlists_production
  username: wishlists
  password: <%= ENV['WISHLISTS_DATABASE_PASSWORD'] %>
