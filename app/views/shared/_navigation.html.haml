%nav.navbar.navbar-inverse{role: 'naviagation'}
  %div.container
    %div.col-md-1
    %div.col-md-10
      %div.navbar-header
        = button_tag '', class: 'navbar-toggle', data: { toggle: 'collapse', target: 'nav-collapse' }
        = link_to :root, class: 'navbar-brand' do
          akWishlists
          = fa_icon 'gift'
      %div.collapse.navbar-collapse#nav-collapse
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              = fa_icon 'gear'
            %ul.dropdown-menu{role: 'menu'}
              %li= link_to 'About', :about
              %li= link_to 'Contact', :contact
              %li= link_to 'Help', :help
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              = fa_icon 'sliders'
            %ul.dropdown-menu{role: 'menu'}
              %li
                = link_to 'Account', current_user if current_user
              %li
                - if current_user
                  = link_to 'Logout', :logout, method: 'delete'
                - else
                  = link_to 'Log In', :login
    %div.col-md-1
