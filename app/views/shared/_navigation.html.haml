%nav.navbar.navbar-inverse{role: 'naviagation'}
  %div.container
    %div.col-md-1
    %div.col-md-10
      %div.navbar-header
        = button_tag '', class: 'navbar-toggle', data: { toggle: 'collapse', target: 'nav-collapse' } do
          = fa_icon 'bars'
        = link_to :root, class: 'navbar-brand' do
          akWishlists
          = fa_icon 'gift'
      %div.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              = fa_icon 'info'
            %ul.dropdown-menu{role: 'menu'}
              %li
                = link_to :about do
                  About
                  = fa_icon 'cubes', class: 'pull-right'
              %li
                = link_to :contact do
                  Contact
                  = fa_icon 'phone', class: 'pull-right'
              %li
                = link_to :help do
                  Help
                  = fa_icon 'question', class: 'pull-right'
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              = fa_icon 'sliders'
            %ul.dropdown-menu{role: 'menu'}
              %li
                - if current_user
                  = link_to current_user do
                    Account
                    = fa_icon 'user', class: 'pull-right'
              %li
                - if current_user
                  = link_to :logout, method: 'delete' do
                    Logout
                    = fa_icon 'sign-out', class: 'pull-right'
                - else
                  = link_to :login do
                    Log In
                    = fa_icon 'sign-in', class: 'pull-right'
    %div.col-md-1
