- model ||= (records.first || params[:controller].classify.constantize.new).class
- records ||= model.all
.page-header
  %h1
    = model.to_s.titleize.pluralize
.table-responsive
  %table.table.table-striped.table-hover
    %tr
      - model.column_names.each do |column_name|
        %th
          = column_name
    - records.each do |instance|
      %tr
        - model.column_names.each do |column_name|
          %td
            = link_to instance do
              = instance.try column_name.to_sym
