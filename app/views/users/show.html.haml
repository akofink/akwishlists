.col-md-12
  = render 'shared/back'
  - if @user == current_user
    = link_to edit_user_path(@user), class: 'btn btn-primary' do
      = fa_icon :pencil
      Edit

.col-md-12
  .panel.panel-default
    .panel-heading
      %h2.panel-title Account
    .list-group
      %li.list-group-item
        %strong
          Username:
        = @user.username
      %li.list-group-item
        %strong
          Email Address:
        = @user.email
      %li.list-group-item
        %strong
          First Name:
        = @user.first_name
      %li.list-group-item
        %strong
          Last Name:
        = @user.last_name
