.col-md-2
.col-md-8
  .page-header
    %h1 Log In
  = form_for @session, html: { class: 'form-horizontal' } do |f|
    = render 'shared/form_errors', model: @session

    .form-group
      = f.label 'Username'
      .col-md-9
        = f.text_field :username,
          placeholder: 'username'
    .form-group
      = f.label 'Password'
      .col-md-9
        = f.password_field :password,
          placeholder: 'password'
    .actions
      .col-md-10.col-sm-offset-2
        = link_back
        = button_tag class: 'btn btn-primary' do
          = fa_icon 'sign-in'
          Log In
.col-md-2
